
GetWindowCursorEventsSystem = {
    updateMethod = {
        processesEntities = {
            {
                processesComponents = {
                    { name = "MainWindow", readonly = false },
                    { name = "CursorEvents", readonly = false }
                }
            }
        }
    }
}


CreateCursorEventsSystem = {
    updateMethod = {
        processesEntities = {
            {
                processesComponents = {
                    "HandleCursorEvents"
                },
                createsComponents = { "CursorEvents" },
                excludes = { "CursorEvents" }
            }
        }
    }
}

SendWindowCursorEventsSystem = {
    callOrder = {
        runAfter = "GetWindowCursorEvents"
    },
    updateMethod = {
         processesEntities = {
            {
                processesComponents = {
                    "MainWindow",
                    "CursorEvents"
                }
            },
            {
                processesComponents = {
                    "HandleCursorEvents",
                    { name = "CursorEvents", readonly = false }
                },
                createsComponents = { "CursorEvents" }
            }
        }
    }
   
}



ClearCursorEventsSystem = {
    callOrder = {
        runAfter = "EndImGuiFrame"
    },
    updateMethod = {
        processesEntities = {
            {
                processesComponents = {
                    { name = "CursorEvents", readonly = false }
                }
            }
        }
    }
}
