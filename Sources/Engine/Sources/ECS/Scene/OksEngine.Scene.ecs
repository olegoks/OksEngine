FindScenesSystem = {
    type = "Initialize",
    callOrder = {
        runAfter = "ConfigureResource",
    },
    updateMethod = {
        processesEntities  = {
            {
                processesComponents = { { name = "ResourceSystem", readonly = false } }
            }
        },
        createsEntities = {
            {
                createsComponents = {
                    "Scene",
                    "ResourcePath"
                }
            }
        }
    }
}


SaveSceneFileSystem = {
    callOrder ={
    runAfter = "CreateSceneFileEnd",
    runBefore = "EndWorldSceneSaving"
    },
    updateMethod = {
    processesEntities  = {
         { 
            processesComponents = {
                "CommandLineParameters",
                "ConfigFilePath"
            }
        },
        {
            processesComponents = { 
                "ECSController",
                "SaveSceneRequest",
                "LuaScript"
            }
        },
        {
            processesComponents = {
                { name = "ResourceSystem", readonly = false }
            }
        },
        {
            processesComponents = {
                "Config",
                "LuaScript"
            }
        }
    }
    }
}

SceneComponent = {
    serializable = false
}


