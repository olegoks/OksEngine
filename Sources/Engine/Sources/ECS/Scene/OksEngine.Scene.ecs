CreateSceneFileStartSystem = {
    callOrder = {
    runAfter = "StartWorldSceneSaving",
    runBefore = "CreateSceneFile"
    },
    updateMethod = {
    processesEntities  = {
        {
            processesComponents = { 
                "ECSController",
                "SaveSceneRequest",
                { name = "LuaScript", readonly = false }
            }            
        }
    }
    }
}

