StartModelAnimationSystem = {
    updateMethod = {
        processesEntities = {
            {
                processesComponents = {
                    "Model",
                    "ModelAnimations",
                    "ChildModelNodeEntities"
                },
                createsComponents = {
                    "AnimationInProgress"
                },
                removesComponents = {
                    "RunModelAnimation",
                    "AnimationInProgress",
                    "Animation::Model::Node::RunningState"
                }
            },
            {
                processesComponents = {
                    "Clock",
                    "TimeSinceEngineStart"
                }
            }
        },
        accessingEntities = {
            {
                accessingComponents = {
                    "ChildModelNodeEntities",
                    "AnimationInProgress",
                    "RunModelAnimation",
                    "Animation::Model::Node::RunningState"
                },
                createsComponents = {
                    "Animation::Model::Node::RunningState"
                }
            }
        }
    }
}

